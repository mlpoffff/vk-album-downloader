{
  "name": "vk-album-downloader",
  "private": true,
  "type": "module",
  "main": "index.js",
  "version": "0.0.1",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "build:electron": "npm run build && electron-builder --mac --arm64"
  },
  "build": {
    "appId": "com.mlpoffff.vkalbum",
    "productName": "VKAlbumDownloader",
    "executableName": "VKAlbumDownloader",
    "asar": false,
    "files": [
      "index.js",
      ".output/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "logo/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "VKAlbumDownloader"
    },
    "mac": {
      "target": "dmg",
      "icon": "logo/logo.icns",
      "category": "public.app-category.productivity"
    }
  },
  "dependencies": {
    "@iconify-json/lucide": "^1.2.82",
    "@iconify-json/simple-icons": "^1.2.63",
    "@nuxt/ui": "^4.3.0",
    "axios": "^1.13.2",
    "canvas-confetti": "^1.9.4",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "nuxt": "^4.2.2"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.12.1",
    "@pinia/nuxt": "^0.11.3",
    "@types/canvas-confetti": "^1.9.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.6",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.2.1"
  }
}
